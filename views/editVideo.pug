extends layouts/main
block content
    .form-container
        form(action=routes.editVideo(video._id), method="post")
            input(type="text",name="title", placeholder="Title",value=video.title) 
            textarea(name="description", cols="15", rows="5", placeholder="Description" )=video.description
            input(type="submit", value="Update Video")
        a.form-container__link(href=routes.deleteVideo(video._id)) 
             button.delete Delete Video



